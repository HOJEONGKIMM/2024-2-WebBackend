<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Recipe Finder</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- 네비게이션 바 -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand logo" href="#">
                <i class="fas fa-book-open"></i>
                Recipe Finder
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link <%= activePage === 'Recipes' ? 'active' : '' %>" href="/recipes">Recipes</a></li>
                    <li class="nav-item"><a class="nav-link <%= activePage === 'Favorites' ? 'active' : '' %>" href="#" id="view-favorites">Favorites</a></li>
                    <li class="nav-item"><a class="nav-link" href="#" id="logout-button">Log out</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- 회원가입/로그인 섹션 -->
    <div class="container my-4">
        <h3>Sign Up / Log In</h3>
        <div class="row">
            <!-- 회원가입 폼 -->
            <div class="col-md-6">
                <h4>Sign Up</h4>
                <form id="signup-form">
                    <input type="text" class="form-control mb-2" id="signup-username" placeholder="Username" required>
                    <input type="password" class="form-control mb-2" id="signup-password" placeholder="Password" required>
                    <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                </form>
            </div>
            <!-- 로그인 폼 -->
            <div class="col-md-6">
                <h4>Log In</h4>
                <form id="login-form">
                    <input type="text" class="form-control mb-2" id="login-username" placeholder="Username" required>
                    <input type="password" class="form-control mb-2" id="login-password" placeholder="Password" required>
                    <button type="submit" class="btn btn-success w-100">Log In</button>
                </form>
            </div>
        </div>
    </div>

    <!-- 즐겨찾기 섹션 -->
    <div class="container my-4" id="favorites-section" style="display: none;">
        <h3>Your Favorites</h3>
        <ul id="favorites-list" class="list-group"></ul>
    </div>

    <footer>
        <div>© 2023 Recipe Finder. All rights reserved.</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        const API_URL = 'http://localhost:8081';
        let token = '';

        // 회원가입
        document.getElementById('signup-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const username = document.getElementById('signup-username').value;
            const password = document.getElementById('signup-password').value;

            try {
                const response = await axios.post(`${API_URL}/signup`, { username, password });
                alert(response.data.message);
            } catch (error) {
                alert(error.response.data.message || 'Sign Up Error');
            }
        });

        // 로그인
        document.getElementById('login-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const username = document.getElementById('login-username').value;
            const password = document.getElementById('login-password').value;

            try {
                const response = await axios.post(`${API_URL}/login`, { username, password });
                token = response.data.token;
                alert('Logged in successfully!');
            } catch (error) {
                alert(error.response.data.message || 'Log In Error');
            }
        });

        // 즐겨찾기 보기
        document.getElementById('view-favorites').addEventListener('click', async () => {
            if (!token) {
                alert('Please log in first.');
                return;
            }

            try {
                const response = await axios.get(`${API_URL}/favorites`, {
                    headers: { Authorization: `Bearer ${token}` },
                });
                const favorites = response.data.favorites;
                const favoritesList = document.getElementById('favorites-list');
                favoritesList.innerHTML = '';
                favorites.forEach(recipe => {
                    const li = document.createElement('li');
                    li.textContent = recipe;
                    li.className = 'list-group-item';
                    favoritesList.appendChild(li);
                });
                document.getElementById('favorites-section').style.display = 'block';
            } catch (error) {
                alert(error.response.data.message || 'Error fetching favorites');
            }
        });

        // 로그아웃
        document.getElementById('logout-button').addEventListener('click', () => {
            token = '';
            alert('Logged out successfully.');
            document.getElementById('favorites-section').style.display = 'none';
        });
    </script>
</body>
</html>
